/* pages/index/index.wxss */
.index-page-container{position: fixed;
                      width: 100%;
                      height: 100%;}
/*头部*/
.header{width: 100%;
        background: #208ee1;
        display: flex;
        flex-direction: column;
        text-align: center;
        align-items: center;
        justify-content: center; 
        box-sizing: border-box;
        padding: 0px 15px 15px 15px;
        height: 35%;
        font-size: 16px;
        color: white;
        }      
.header-content{width:100%;}     
.budget-container{display: flex;
                  flex-direction: row;
                  align-items: center;
                  justify-content: center;
                  } 
                                        
.eye-show{width: 20px;
          height: 20px;
          margin-left: 5px;
          display: inline-block;
          }
.current-date-container{font-size: 14px;
                        margin-top: 5px;
                        display: flex;
                        align-items: center;
                        justify-content: center;}
.down-drop{width: 20px;
           height: 20px;
           }
.type-item{display: flex;
           flex-direction: column;
           justify-content: center;
           align-items: flex-start;
           text-align: center;
           margin: 0px 0px;
           color: rgba(255, 255, 255, 1);
           width: 50%;
           box-sizing: border-box;
           }
.type-item-left{align-items: flex-end;
                margin-right: 10px;}
.type-item-right{margin-left: 10px;}
.type-container{display: flex;
                flex-direction: row;
                justify-content: center;
                font-size: 15px;
                margin-top: 10px;
                position: relative;
                }

.type-item-left:after{content: "";
                      width: 1px;
                      height: 85%;
                      background: white;
                      position: absolute;
                      left: 50%;
                      top: 2px;}

.budgetary-amount-text{color: white;
                       font-size: 16px;
                       }
.budgetary-amount-value{margin-top: 5px;
                        color: white;
                        font-size: 30px;
                        }

/*头部结束*/

/*统计按钮*/
.count{width:15px;
       height: 15px;}

/*每日统计记录总item*/
.daily-record-container{width: 100%;
                        height: 65%;
                        transition: all 0.3s;
                        }


.daily-item-container,.daily-item-detial{width:100%;
                      height: 60px;
                      position: relative;
                      padding: 5px;
                      box-sizing: border-box;
                      font-size: 14px;
                      background: #f8f8f8;
                      color: #7f7f7f;
                      transition: all 0.3s;
                      }
.daily-item-container:hover{background:rgba(248, 248, 248, 0.9);}
/*.daily-item-detial:hover{background:rgba(240, 240, 240, 0.5);
                            }*/
.daily-item-container:before{content: "";
                             width: 14px;
                             height: 14px;
                             border-radius: 100%;
                             background:#dddddd;
                             position: absolute;
                             left: 43px;
                             top: 18px;
                             }
.daily-item-container:after,.daily-item-detial:after{content:"";
                            width: 1px;
                            height: 100%;
                            background: #dddddd;
                            position: absolute;
                            left: 50px;
                            top: 0px;
                            z-index: 0;
                            }


.left-container{margin-left: 80px;
                display: flex;
                flex-direction: column;
                float: left;
                justify-content: center;
                height: 50px;
                width: 41%;
                }
.left-container text{align-items: center}

.left-container>text{margin-bottom:2px;
                     margin-top: 2px;}

.right-container{float: right;
                 margin-right: 30px;
                 color: #ff5353;
                 height:50px;
                 line-height: 50px;
                 flex-direction: column;
                 justify-content: center;
                 align-items: center;
                 width: 22%;
                 text-align: right
                 }
.right-container>view{height: 50%;
                      line-height: 25px;
                      text-align: right;
                      }

.right-container-income{color: #40c1aa;
                        }

/*每日统计记录item结束*/


/*每日记录详情*/
.daily-item-detial-container-hide{display: none;}
.daily-item-detial{background: white;
                   }
.type-icon{width:32px;
           height: 32px;
           position: absolute;
           left: 34px;
           top: 14px;
           z-index: 1;
           background: #eee;
           border-radius: 100%;
           display: flex;
           align-items: center;
           justify-content: center;
           }
.type-icon image{width: 70%;
                 height: 70%;
                 }
.spend-type-text{font-weight: bold;
                 font-size: 15px;}
.spend-notes{line-height: 12px;
             display: flex;
             }
.spend-notes-text{font-size: 12px;
                  display: block;
                  margin-top: 4px;
                  line-height: 12px;
                  overflow: hidden;
                  }

.spend-notes-icon{width:11px;
                  height: 11px;
                  margin-right: 4px;
                  margin-top: 5px;
                  display: block;
                  }
.money-string,.money-text{font-size: 18px;}
/*每日记录详情结束*/

/*无记录*/
.none-items-container{width: 250px;
                      margin: 0 auto;
                      text-align: center;
                      color: #707070;
                      margin-top: 100px;
                      font-size:14px;
                      }
.none-items-icon{width: 48px;
                 height: 48px;
                 margin-bottom: 5px;
                }
.some-tips{margin-top: 15px;
           font-size: 13px;}
/*无记录结束*/


.refresh-container{height: 0px;
                   text-align: center;
                   line-height: 60px;
                   transition: all 0.3s;
                   color: #7f7f7f;
                   font-size: 15px;
                   opacity: 0;}
.refresh-container-show{height: 60px;
                        opacity: 1}

/*
* 添加按钮
*/
.add-container{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  bottom: 20rpx;
  right: 65rpx;
  background:#208ee1;
  border-radius: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow:0px 2px 5px rgba(0,0,0,0.4);
  transition:all 0.4s ease;
}
.add-container image{
  width: 50%;
  height: 50%;
}
.add-container:hover{
  box-shadow:0px 2px 10px rgba(0,0,0,0.5);
}
.add-container-down{
  bottom: -100rpx;
}