/* pages/advice/advice.wxss */
page{background: #f5f5f5;
     font-size: 15px;
     color: #666666}
.advice-container{
                  display: flex;
                  flex-direction: column;
                  box-sizing: border-box;
                  margin-top: 10px;
                  }
.advice-content{box-sizing: border-box;
                height: 120px;
                border-top: 1px solid rgba(0,0,0,0.2);
                border-bottom: 1px solid rgba(0,0,0,0.2);
                width: 100%;
                padding: 15px;
                margin-top: 15px;
                background: white;
                }
.advice-content::placeholder{font-size:15px;}              
.push{margin-top: 20px;
      width: 90%;
      margin: 0 auto;
      margin-bottom: 15px;
      }
.tips{margin-left: 15px;
      margin-top: 15px;}
.shot-text{margin-right: 10px;}


.phonts-contaoner{display: flex;
                  flex-wrap: wrap;}
.photo-item{width: 4rem;
            height: 4rem;
            border:1px solid white;
            background: white;
            box-sizing: border-box;
            margin:10px 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            }
.photo-item image{width:40px;
                  height: 40px;}
.photo-item .selected-pic{width: 100%;
                          height: 100%;}
.delete{position: absolute;
        top: 5px;
        right: 5px;
        }

.large-photo{width: 100%;
             height: 100%;
             position: fixed;
             top: 0;
             left: 0px;
             z-index: 99999;
             background: #e8e8e8;
             display: none;}
.large-photo image{width: 100%;
                   height: 100%;}
.large-photo-show{z-index: 10000;
                  display: block}