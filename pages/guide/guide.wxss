/* pages/guide/guide.wxss */
.wrapper{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
}
.content,.mask,.mask image{
  width: 100%;
  height: 100%;
}
.mask{
  position: absolute;
  z-index: -1;
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.login{
  width: 450rpx;
  height: 80rpx;
  background:#e8e8e8;
  border-radius: 10rpx;
  background:rgba(32,142,225,0.8);
  color: white;
  box-shadow:0px 2px 5px rgba(0,0,0,0.4);
  transition:all 0.4s ease;
  border: none;
  line-height: 80rpx;
  font-size: 32rpx;
}
.login:hover{
 box-shadow:0px 2px 10px rgba(0,0,0,0.5);  
}
