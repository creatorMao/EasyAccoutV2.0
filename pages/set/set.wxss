/* pages/set/set.wxss */
.set-page-container{background: #f5f5f5;
                    width: 100%;
                    height: 100%;
                    position: fixed;
                    left: 0px;
                    top: 0px;
                    font-size: 14px;
                    color: #333333}
.set-item{height: 40px;
          background: #ffffff;
          position: relative;
          display: flex;
          padding: 0px 20px;
          justify-content: space-between;
          align-items: center;
          transition: all 0.3s;}
.set-item text{line-height: 40px}
.set-item view{display: flex;
               align-items: center;
               color: #999999}
.set-item view text{margin-top: 1px;}
.set-item:after{content: "";
                width: 100%;
                height: 1px;
                background: #dddddd;
                position: absolute;
                bottom: 0px;
                left: 20px;}
.set-item-last:after{content: "";
                     width: 0px;
                     height: 0px;}
.right-arrow-icon{width: 20px;
                  height: 20px;
                  }
.budget-input{text-align: right}


.user-pic-container{
          width: 100px;
          margin: 0 auto;
          margin-top: 30px;
          margin-bottom: 30px;
          display: flex;
          flex-direction: column;
          align-items: center;}
.user-pic{width: 100px;
          height: 100px;
          border-radius:100%;}
.user-name{margin-top:10px;
           font-size: 17px;}
.version{padding-right: 7px;}