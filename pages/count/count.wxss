/* pages/count/count.wxss */
page{color: #666666;
     font-size: 15px;
     background: #208ee1;
     min-height:100%;}
.count-container{
                  width: 96%;
                  margin-left: 2%;
                  background: white;
                  border-radius: 2px;
                  overflow: hidden;
                  margin-bottom: 10px;
                  padding-top: 5px;
                 }
.canvas{width: 100%;
        margin-left: 10px;
        }
.proportion{width: 10rem;
            height: 12px;}
.cost-item{display: flex;
           padding: 0px 10px;
           margin: 20px 0px;
           align-items: center;}
.right{flex-grow: 1;
       margin-left: 15px;}
.icon{width: 22px;
      height: 22px;
      position: relative;}
.icon:after{width: 140%;
            height: 140%;
            content: "";
            background: #eeeeee;
            position: absolute;
            top: -20%;
            left: -20%;
            z-index: -1;
            border-radius: 100%;}
.right-top{margin-bottom: 10px;
           display: flex;
           justify-content: space-between}
.sum{margin-left: 10px;
     font-size:14px;}
.number{margin-left: 10px;
        font-size: 14px;}
.rate{font-size: 14px;}



.choose{
        height: 50px;
        display: flex;
        align-items: center;
        width: 94%;
        margin: 0 auto;
        color: white;}
.down-drop{width: 20px;
           height: 20px;
           }

.selector-container{width: 80px;
                    height:26px;
                    background:rgba(0,0,0,0);
                    display: flex;
                    color: white;
                    align-items: center;
                    justify-content: center;
                    text-align: center;
                    border:1px solid #666666;
                    margin-right: 10px;
                    box-sizing: border-box;
                    position: relative;}
.selector-item{width: 50%;
               height: 26px;
               line-height: 26px;
               color: #666666;
               }
.selector-mask{width: 50%;
               height: 101%;
              box-sizing: border-box;
              background: #666666;
              position: absolute;
              left: 0;
              top: 0px;
              z-index: 1;
              border:1px solid #666666;
              transition: all 0.3s;
              
              }
.item-wrapper{width: 100%;
              height: 100%;
              position: absolute;
              left: 0px;
              top: 0px;
              z-index: 1;
              display: flex;
              overflow: hidden;}
.selector-item-active{color:white }
.selector-mask-active{
                      left: 50%;
                      margin-left: 1px;}
.month{color: rgba(0,0,0,0.7);
       margin-right: 15px;}
.line{width: 95%;
      margin: 0 auto;
      height: 4px;
      background: rgba(0,0,0,0.7)}
.line-small{height: 1px;
            margin-top: 5px;}
.title{width: 95%;
       margin: 0 auto;
       color: rgba(0,0,0,0.7);
       margin-top: 15px;
       display: flex;
       align-items: center;}
.sub-title{font-size: 20px;
           font-weight: bolder;
           margin-right: 10px;}
.dot{border-bottom:1px dashed #666666;}